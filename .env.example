# ============================================
# KEK-VONAL MONOREPO - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
#
# NEVER commit .env to git!
#

# ============================================
# SERVER CONFIGURATION
# ============================================
SERVER_HOST=host

SERVER_PORT=port
SERVER_USER=marci
PUBLIC_DOMAIN=jegyzokonyv.kek-vonal.cc
PUBLIC_URL=https://jegyzokonyv.kek-vonal.cc

# ============================================
# DATABASE CONFIGURATION (PostgreSQL + PostGIS)
# ============================================
POSTGRES_USER=directus
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=directus
DB_HOST=192.168.1.100
DB_PORT=5432

# Timezone
TZ=GMT+1
PGTZ=GMT+1

# ============================================
# REDIS CACHE CONFIGURATION
# ============================================
REDIS_HOST=cache
REDIS_PORT=6379
CACHE_REDIS=redis://cache:6379

# ============================================
# DIRECTUS CONFIGURATION
# ============================================
# Generate new keys with: node -e "console.log(require('crypto').randomUUID())"
DIRECTUS_KEY=your_directus_key_here
DIRECTUS_SECRET=your_directus_secret_here

# Admin credentials
ADMIN_EMAIL=your_email@example.com
ADMIN_PASSWORD=your_admin_password_here

# Email configuration (using Brevo/Sendinblue SMTP)
EMAIL_FROM=noreply@kekvonal.com
EMAIL_TRANSPORT=smtp
EMAIL_SMTP_HOST=smtp-relay.brevo.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_email@example.com
EMAIL_SMTP_PASSWORD=your_smtp_password_here

# Session
REFRESH_TOKEN_TTL=12h

# ============================================
# N8N CONFIGURATION
# ============================================
N8N_HOST=jegyzokonyv.kek-vonal.cc
N8N_PROTOCOL=https
N8N_PATH=/n8n/
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=your_email@example.com
N8N_BASIC_AUTH_PASSWORD=your_n8n_password_here
N8N_WEBHOOK_URL=https://jegyzokonyv.kek-vonal.cc/n8n/

# ============================================
# GOOGLE CLOUD STORAGE (for backups)
# ============================================
GCS_BUCKET=gs://kek-vonal-backup-bucket
GCS_PROJECT_ID=your_gcs_project_id_here

# ============================================
# BACKUP CONFIGURATION
# ============================================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7

# ============================================
# SSH & REMOTE ACCESS
# ============================================
# SSH credentials for production server
SSH_HOST=218.14.111.12
SSH_PORT=2000
SSH_USER=marci
SSH_BACKUP_PASSWORD=your_backup_password_here

